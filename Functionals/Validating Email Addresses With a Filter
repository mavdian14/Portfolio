def fun(s):
    import re
    if(re.search(r"^[\w,-]+@[a-zA-Z0-9]+\.[a-zA-Z]{1,3}$",s)):
        return True
    else:
        return False
    # regular expressions: ^ signifies start of string. \w covers, alphanumeric characters (uppercase + lowercase)& _. + means 1 or more. $ signifies end of search.
